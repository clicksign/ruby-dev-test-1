<%= form_with url: folder_files_url, method: :post, model: FolderFile.new, class: 'row' do |f| %>
  <div class="col-9">
    <%= f.file_field :file, required: true, class: "form-control" %>
    <%= f.hidden_field :folder_id, value: @folder&.id %>
  </div>
  <div class="col-3">
    <%= f.submit 'Upload', class: "btn btn-primary mb-2" %>
  </div>
<% end %>