<h1>New Directory</h1>

<%= form_with(model: @directory, url: directories_path) do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>


  <div>
    <%= form.label :parent_id, 'Parent Directory' %>
    <%= form.collection_select :parent_id, Directory.all, :id, :name, include_blank: true %>
  </div>

  <%= form.submit 'Create Directory' %>
<% end %>

<%= link_to 'Back', directories_path %>
