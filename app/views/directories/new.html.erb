<h1 class="page-title">New Directory</h1>

<%= form_with(model: @directory, url: directories_path, class: "directory-form") do |form| %>
  <div class="form-field">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-input" %>
  </div>

  <div class="form-field">
    <%= form.label :parent_id, 'Parent Directory' %>
    <%= form.collection_select :parent_id, Directory.all, :id, :name, include_blank: true, class: "form-input" %>
  </div>

  <%= form.submit 'Create Directory', class: "submit-button" %>
<% end %>

<%= link_to 'Back', directories_path, class: "back-link" %>
