<%= form_with(model: @aws_file, url: directory_aws_files_path(@directory)) do |form| %>
  <% if @aws_file.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@aws_file.errors.count, "error") %>Prohibited this file from being saved:</h2>
      <ul>
        <% @aws_file.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :url %>
    <%= form.file_field :url %>
  </div>

  <%= form.hidden_field :directory_id, value: @directory.id %>
  <%= form.hidden_field :path, value: @directory.parent_names(@directory.ancestor_ids).join('/') if @directory.ancestry? %>

  <div class="actions">
    <%= form.submit 'Upload File' %>
  </div>
<% end %>
