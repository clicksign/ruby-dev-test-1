  <% @folder.children.each do |child| %>
    <li><%= image_tag folder_icon(child) %> <%= link_to child.name, folder_path(child) %></li>
  <% end %>

  <% @folder.files.each do |file| %>
    <li><%= image_tag 'document.png' %> <%= link_to file.blob.filename, url_for(file) %></li>
  <% end %>
