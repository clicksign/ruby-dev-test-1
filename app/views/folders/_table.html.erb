<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Created at</th>
      <th>Last modified</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td colspan="4">
        <%= link_to('...', folder_path(@folder.parent_folder), title: 'Parent folder') if @folder.parent_folder.present? %>
      </td>
    </tr>

    <% @folders.each do |folder| %>
      <tr>
        <%= render folder %>
      </tr>
    <% end %>

    <% @documents.each do |document| %>
      <tr>
        <%= render 'document', document: document %>
      </tr>
    <% end %>
  </tbody>
</table>
